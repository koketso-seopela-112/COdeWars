@model Spice.Models.ShoppingCart
@using Spice.Externsions
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Item Detail</h2>
<br />
<form method="post" asp-action="Details">
    <div  class="backgroungWhite row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-12 d-md-none">
            <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9;" />
        </div>

        <div class="col-md-8 col-sm-12">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Name" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Name" readonly class="form-control" style="background-color:white" />
                </div>
                <span asp-validation-for="MenuItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Description" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <div class="border p-2">
                        @Html.Raw(Model.MenuItem.Description)
                    </div>
                </div>
                <span asp-validation-for="MenuItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Price" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Price" readonly class="form-control" style="background-color:white" />
                </div>
                <span asp-validation-for="MenuItem.Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.CategoryId" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.Category.Name" readonly class="form-control" style="background-color:white" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.SubCategory" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="MenuItem.SubCategory.Name " readonly class="form-control" style="background-color:white" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="MenuItem.Spicyness" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <select asp-for="MenuItem.Spicyness" disabled asp-items="Html.GetEnumSelectList<MenuItem.ESpicy>()" class="form-control" style="background-color:white"></select>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Count" class="col-form-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Count" class="form-control" />
                </div>
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control"> Back to Lisk</a>
                </div>
                <div class="col-4">
                    <button type="submit" value="Add to Cart" class="btn btn-primary form-control">Add to Cart</button>
                </div>
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
        </div>

        <div class="col-3 offset-1 d-none d-md-block">
            <img src="@Model.MenuItem.Image" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9;" />
        </div>
    </div>
    <input asp-for="MenuItemId" hidden />
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

